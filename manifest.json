{
    "manifest_version": 2,
    "name": "Extension for N highschool programming guild",
    "version": "2.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/n_icon19.png",
        "default_title": "Extension for N highschool programming guild"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [{
        "matches": ["https://www.nnn.ed.nico/*", "http://www.nnn.ed.nico/*"],
        "js": ["jquery-2.2.3.min.js"]
    }],
    "icons": {
        "16": "images/n_icon16.png",
        "48": "images/n_icon48.png",
        "128": "images/n_icon128.png"
    }
}